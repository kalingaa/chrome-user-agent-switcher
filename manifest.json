{
  "manifest_version": 2,
  "name": "Custom User-Agent Switcher",
  "version": "1.0.0",
  "description": "A simple User-Agent switcher extension.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
